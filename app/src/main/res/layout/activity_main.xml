<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.gabrielgouv.androidcustomizablebuttons.MainActivity">

    <com.github.gabrielgouv.customizablebuttons.CustomizableButton
        android:id="@+id/customizableButton1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cb_backgroundColor="#ab47bc"
        app:cb_borderRadius="30dp"
        app:cb_text="Simple Button"
        app:cb_useRippleEffect="true"
        app:cb_textColorPressed="@color/colorAccent"
        app:cb_backgroundColorPressed="#ccc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
